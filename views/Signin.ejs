<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ClassTrack Sign-In</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="styles/main.css" />
    <link rel="stylesheet" href="styles/sign-in.css" />
    <link
      rel="icon"
      type="image/x-icon"
      href="images/Screenshot_2025-02-07_002619-removebg-preview 1.png"
    />
  </head>
  <body>
    <!-- Navbar -->
    <%- include('partials/header.ejs') %>

    <!-- Sign-in Form -->
    <div class="sign_in">
      <div class="container py-5">
        <div class="row align-items-center">
          <div class="col-12 col-md-6">
            <div class="card">
              <h3 class="mb-4">Sign-in</h3>

              <!-- Error message display -->
              <% if (typeof error !== "undefined") { %>
              <div class="alert alert-danger"><%= error %></div>
              <% } %>

              <form action="/signin" method="POST">
                <!-- Hidden User Type Input -->
                <input
                  type="hidden"
                  name="userType"
                  id="userType"
                  value="teacher"
                />

                <!-- User Type -->
                <label for="userType" class="form-label">User Type:</label>
                <div class="d-flex mb-3">
                  <button
                    type="button"
                    id="teacherBtn"
                    class="btn btn-outline-primary user-type-btn active me-2"
                  >
                    <img src="images/teacher.png" alt="Teacher Icon" />
                    <span>Teacher</span>
                  </button>
                  <button
                    type="button"
                    id="studentBtn"
                    class="btn btn-outline-primary user-type-btn"
                  >
                    <img src="images/student.png" alt="Student Icon" />
                    <span>Student</span>
                  </button>
                </div>

                <!-- Email -->
                <div class="mb-3">
                  <label for="email" class="form-label">E-mail</label>
                  <input
                    type="email"
                    name="email"
                    class="form-control"
                    placeholder="96xxx@must.edu.eg"
                    id="email"
                    required
                  />
                  <small class="text-primary">
                    Please enter your institution-verified email to access the
                    system
                  </small>
                </div>

                <!-- Password -->
                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  <div class="input-group">
                    <input
                      type="password"
                      name="password"
                      class="form-control"
                      id="password"
                      placeholder="Enter your password"
                      required
                    />
                    <button
                      class="eye-btn"
                      type="button"
                      onclick="togglePassword()"
                    >
                      üëÅ
                    </button>
                  </div>
                  <a href="#" class="text-end d-block mt-1">Forget Password?</a>
                </div>

                <!-- Institution -->
                <div class="mb-3">
                  <label for="institution" class="form-label"
                    >Institution Name</label
                  >
                  <select
                    class="form-select"
                    id="institution"
                    name="institution"
                  >
                    <option selected>
                      Misr University For Science And Technology
                    </option>
                    <option>Other University</option>
                  </select>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-primary w-100">
                  Sign in Now
                </button>
              </form>
            </div>
          </div>

          <!-- Right side image -->
          <div class="col-12 col-md-6 d-none d-md-block">
            <img
              src="images/Login-pana 1.png"
              alt="illustration"
              class="img-fluid"
            />
          </div>
        </div>
      </div>
    </div>

    <script>
      // Toggle user type buttons
      document.addEventListener("DOMContentLoaded", () => {
        const teacherBtn = document.getElementById("teacherBtn");
        const studentBtn = document.getElementById("studentBtn");
        const userTypeInput = document.getElementById("userType");

        teacherBtn.addEventListener("click", () => {
          teacherBtn.classList.add("active");
          studentBtn.classList.remove("active");
          userTypeInput.value = "teacher";
        });

        studentBtn.addEventListener("click", () => {
          studentBtn.classList.add("active");
          teacherBtn.classList.remove("active");
          userTypeInput.value = "student";
        });
      });

      // Toggle password visibility with animation
      function togglePassword() {
        const pass = document.getElementById("password");
        const eyeBtn = document.querySelector(".eye-btn");

        if (pass.type === "password") {
          pass.type = "text";
          eyeBtn.classList.remove("closed"); // Remove animation class for opening eye
        } else {
          pass.type = "password";
          eyeBtn.classList.add("closed"); // Add animation class for closing eye
        }
      }
    </script>

    <!-- Include Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
